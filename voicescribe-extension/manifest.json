{
    "manifest_version": 3,
    "name": "VoiceScribe Meeting Audio Recorder",
    "version": "1.0",
    "description": "Record audio from your mic on any tab. Download for transcription.",
    "permissions": [
        "scripting",
        "activeTab",
        "downloads"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}